  <script is:inline>
  (function () {
    const ids = ["chaud","softs","bieres","cocktails","aperitifs","spiritueux","vins"];
    const sections = ids.map(id => document.getElementById(id)).filter(Boolean);
    const links = Array.from(document.querySelectorAll(".tab-link"));

    const setActive = (id) => {
      links.forEach(a => {
        const active = a.dataset.tab === id;
        a.classList.toggle("text-[var(--color-copper)]", active);
        a.classList.toggle("text-brand", !active);
      });
    };

    // IntersectionObserver pour l’état actif au scroll
    const io = new IntersectionObserver((entries) => {
      const vis = entries
        .filter(e => e.isIntersecting)
        .sort((a,b) => b.intersectionRatio - a.intersectionRatio)[0];
      if (!vis) return;
      setActive(vis.target.id);
    }, {
      root: null,
      rootMargin: "-45% 0px -45% 0px",
      threshold: [0.06, 0.2, 0.4, 0.6]
    });

    sections.forEach(sec => io.observe(sec));

    // État visuel immédiat au clic (sans attendre l’observer)
    links.forEach(a => {
      a.addEventListener("click", () => setActive(a.dataset.tab));
    });
  })();
</script>

