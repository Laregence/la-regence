  <script is:inline>
(function () {
  const tabsWrap = document.getElementById('tabsWrap');             // <ul id="tabsWrap"> … </ul>
  const tabs = Array.from(document.querySelectorAll('.tab-link'));   // <a class="tab-link" data-tab="...">
  const ids  = ['chaud','softs','bieres','cocktails','aperitifs','spiritueux','vins'];
  const secs = ids.map(id => document.getElementById(id)).filter(Boolean);

  if (!tabs.length || !secs.length) return;

  const setActive = (id) => {
    tabs.forEach(a => {
      const active = a.dataset.tab === id;
      a.classList.toggle('text-[var(--color-copper)]', active);
      a.classList.toggle('text-brand', !active);
    });
  };

  // Fait défiler la barre d'onglets pour coller l'onglet actif à gauche
  const scrollTabIntoLeft = (linkEl) => {
    if (!tabsWrap || !linkEl) return;
    const pad = 12; // petit offset visuel
    const left = Math.max(0, linkEl.offsetLeft - pad);
    tabsWrap.scrollTo({ left, behavior: 'smooth' });
  };

  // ==== Initialisation: onglet actif = hash ou "chaud" ====
  const initialId = (location.hash || '').replace('#','') || 'chaud';
  setActive(initialId);
  // place le bon onglet à gauche
  const initialLink = tabs.find(a => a.dataset.tab === initialId);
  if (initialLink) {
    // scroll auto au chargement
    requestAnimationFrame(() => scrollTabIntoLeft(initialLink));
  }

  // ==== IntersectionObserver: active l’onglet de la section la + visible ====
  const io = new IntersectionObserver((entries) => {
    const vis = entries
      .filter(e => e.isIntersecting)
      .sort((a,b) => b.intersectionRatio - a.intersectionRatio)[0];
    if (!vis) return;

    const id = vis.target.id;
    setActive(id);
    const link = tabs.find(a => a.dataset.tab === id);
    if (link) scrollTabIntoLeft(link);
  }, {
    root: null,
    rootMargin: '-45% 0px -45% 0px',
    threshold: [0.01, 0.1, 0.25, 0.5]
  });

  secs.forEach(s => io.observe(s));

  // ==== Au clic: active + aligne à gauche immédiatement ====
  tabs.forEach(a => {
    a.addEventListener('click', () => {
      setActive(a.dataset.tab);
      scrollTabIntoLeft(a);
    });
  });
})();
</script>

