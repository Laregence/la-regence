  { id: "chaud",      label: "Café, thé & chocolat" },
  { id: "softs",      label: "Softs" },                 // inclut Eaux
  { id: "bieres",     label: "Bières" },
  { id: "cocktails",  label: "Cocktails" },             // inclut Mocktails & Shooters
  { id: "aperitifs",  label: "Apéritifs" },
  { id: "spiritueux", label: "Spiritueux" },
  { id: "vins",       label: "Vins" },
